<div class="col py-3">
    <section>
        <div class="container ">
            <div class="row d-flex justify-content-end ">
                <a href="/admin/addcategory" class="btn btn-success mb-5 me-2" style="width: auto; ">Add
                    Category</a>
                <a href="/admin/add_product" class="btn btn-success mb-5" style="width: auto; ">Add
                    Products</a>
            </div>
            <table class="table mt-4" id="userTable">
                <thead>
                    <tr>
                        <th scope="col">Product ID</th>
                        <th scope="col">Product</th>
                        <th scope="col">Price</th>
                        <th scope="col">Discount</th>
                        <th scope="col">Image</th>
                        <th scope="col">Options</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each productDetails}}
                    <tr>
                        <td>{{this._id}}</td>
                        <td>{{this.productname}}</td>
                        <td>{{this.price}}</td>
                        <td>{{this.discount}}</td>
                        <td><img src="/images/{{this.Image}}" alt="" style="height:50px ;width: 50px;"> </td>
                        <td>
                            <a href="/admin/edit-product/{{this._id}}"><i
                                    class="bx bx-edit-alt fs-5 text-primary px-2"></i></a>
                            <a href="/admin/delete-product/{{this._id}}"><i
                                   onclick="" class="delete bx bx-trash text-danger px-2"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </section>

    <script>

        $(document).ready(function () {
            $('#userTable').DataTable();
        });
    </script>
</div>
</div>
</div>

